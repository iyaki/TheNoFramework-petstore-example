{
    "keywords": [
        "iyaki",
        "the-no-framework",
        "TheNoFramework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "iyaki/the-no-framework": "^2.0",
        "laminas/laminas-diactoros": "^3.5",
        "league/container": "^5.0",
        "psr/http-message": "^2.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "TheNoFrameworkPetstore\\": "src"
        }
    },
    "scripts": {
        "static-analysis": "phpstan analyse --level max config public src",
        "style-check": "ecs",
        "style-fix": "ecs --fix",
        "test": "phpunit tests"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "require-dev": {
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "rector/rector": "^2.0",
        "rector/swiss-knife": "^2.1",
        "symplify/easy-coding-standard": "^12.5",
        "tomasvotruba/class-leak": "^2.0",
        "tomasvotruba/type-coverage": "^2.0"
    }
}
